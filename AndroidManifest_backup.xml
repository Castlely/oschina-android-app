            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.oschina.net"
                    android:pathPrefix="/news/"
                    android:scheme="http" />
                <data
                    android:host="www.oschina.net"
                    android:pathPrefix="/question/"
                    android:scheme="http" />
                <data
                    android:host="www.oschina.net"
                    android:pathPrefix="/p/"
                    android:scheme="http" />
                <data
                    android:host="my.oschina.net"
                    android:pathPrefix="/u/"
                    android:scheme="http" />
                <data
                    android:host="my.oschina.net"
                    android:pathPattern=".+/tweet/.+"
                    android:scheme="http" />
                <data
                    android:host="my.oschina.net"
                    android:pathPrefix=".+/blog/.+"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <receiver android:name="cn.gov.psxq.ui.BroadCast" >
            <intent-filter>
