<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tencentnews="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="11.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="9.0dip" >

        <ImageView
            android:id="@+id/lingdaoImage"
            android:layout_width="@dimen/list_house_item_house_pic_width"
            android:layout_height="@dimen/list_house_item_house_pic_height"
            android:layout_marginBottom="@dimen/news_list_item_image_margin_top"
            android:layout_marginTop="2.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/list_default_image" />

        <TextView
            android:id="@+id/lingdaoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lingdaoImage"
            android:layout_marginLeft="@dimen/news_list_item_text_margin_left"
            android:text=""
            android:textColor="@color/author_text"
            android:textSize="20dip" >
        </TextView>

        <TextView
            android:id="@+id/lingdaoZhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lingdaoName"
            android:layout_marginLeft="@dimen/news_list_item_text_margin_left"
            android:layout_toRightOf="@id/lingdaoImage"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15dip"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>