<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tencentnews="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="11.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="9.0dip" >

        <ImageView
            android:id="@+id/information_listitem_image"
            android:layout_width="@dimen/list_house_item_house_pic_width"
            android:layout_height="@dimen/list_house_item_house_pic_height"
            android:layout_marginBottom="@dimen/news_list_item_image_margin_top"
            android:layout_marginTop="2.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/list_default_image" />

        <!-- android:maxLines="1" -->
		<!-- android:ellipsize="end" -->
        <TextView
            android:id="@+id/information_listitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/news_list_item_text_margin_left"
            android:layout_toRightOf="@id/information_listitem_image"
            android:lineSpacingExtra="2.0dip"
            android:textColor="@color/list_title_color"
            android:textSize="@dimen/list_title_text_size" />

        <TextView
            android:id="@+id/information_listitem_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/information_listitem_title"
            android:layout_marginLeft="@dimen/news_list_item_text_margin_left"
            android:layout_toRightOf="@id/information_listitem_image"
            android:contentDescription="@null"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="2"
            android:textColor="#ffa7a7a7"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/information_listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/information_listitem_description"
            android:layout_marginTop="1.0dip"
            android:textColor="#ffa7a7a7" />
    </RelativeLayout>

</RelativeLayout>